@model List<WebPizzAmor.Models.Pizza>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menú de Pizzas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .card {
            height: 400px; 
            display: flex;
            flex-direction: column;
        }

        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: contain;
        }

        .card-body {
            flex-grow: 1;
        }

        .card-title, .card-text, .fw-bold, .text-muted {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4 text-center">Menú de PizzAmor 🍕</h1>

        <div class="row">
            @foreach (var pizza in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="@pizza.UrlMenu"
                             class="card-img-top"
                             alt="@pizza.NombrePizza"
                             onerror="this.onerror=null;this.src='';">

                        <div class="card-body">
                            <h5 class="card-title">@pizza.NombrePizza</h5>
                            <p class="card-text">@pizza.DescripPizza</p>
                            <p class="fw-bold">Precio: $@pizza.Precio</p>
                            <p class="text-muted">Tamaño: @pizza.TamanioPizza</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
