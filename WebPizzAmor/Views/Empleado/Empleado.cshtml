@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Empleados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <section class="form-registroEmpleado">
        @using (Html.BeginForm("AgregarEmpleado", "Empleado", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h4>Registro del Empleado</h4>
            <input class="controls" type="text" name="nombre" id="Nombre" placeholder="Ingresa el nombre del empleado">
            <input class="controls" type="text" name="apellido" id="Apellido"
                   placeholder="Ingresa el apellido del empleado">
            <input class="controls" type="text" name="edad" id="Edad" placeholder="Ingresa la edad del empleado">
            <select id="Sexo" name="sexo" class="controls">
                <option value="" selected disabled>Selecciona el sexo del empleado</option>
                <option value="M">Masculino</option>
                <option value="F">Femenino</option>
            </select>
            <select id="Puesto" name="puesto" class="controls">
                <option value="" selected disabled>Selecciona el puesto del empleado</option>
                <option value="Cocinero(a)">Cocinero(a)</option>
                <option value="Mesero(a)">Mesero(a)</option>
            </select>
            <input class="botons" type="submit" value="Guardar">
        }
    </section>
</body>
</html>