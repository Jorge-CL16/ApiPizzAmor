@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Refrescos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="/imgC/fondo.jpg">
</head>

<body>
    <section class="form-Empleado">
        @using (Html.BeginForm("TablaRefresco", "Refresco", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h4>Tabla de Refrescos</h4>
            <table class="table table-success table-striped mt-4">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Precio</th>
                        <th scope="col">TamaÃ±o</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdRefresco</td>
                            <td>@item.Marca</td>
                            <td>@item.PrecioR</td>
                            <td>@item.TamanioR</td>
                            <td>
                                @Html.ActionLink("Agregar", "Refresco", new { IdRefresco = item.IdRefresco }, new { @class = "btn btn-primary btn-sm text-white mt-2" })
                                @Html.ActionLink("Editar", "ModificarRefresco", new { idRefresco = item.IdRefresco }, new { @class = "btn btn-warning btn-sm mt-2 text-white" })
                                @Html.ActionLink("Eliminar", "EliminarRefresco", new { idRefresco = item.IdRefresco }, new { @class = "btn btn-danger btn-sm mt-2 text-white" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <input class="botons" type="submit" value="Agregar">
        }
    </section>
</body>
</html>