@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Refrescos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/imgC/fondo.jpg">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <section class="form-registroRefresco">
        @using (Html.BeginForm("AgregarRefresco", "Refresco", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h4>Registro del Refresco</h4>
            <input class="controls" type="text" name="marca" id="Marca" placeholder="Ingresa la marca del refresco">
            <input class="controls" type="text" name="precio" id="Precio" placeholder="Ingresa el precio del refreco">
            <input class="controls" type="text" name="tamanio" id="Tamanio" placeholder="Ingresa el tamaño del refresco">
            <input class="botons" type="submit" value="Guardar">
        }
    </section>
</body>
</html>