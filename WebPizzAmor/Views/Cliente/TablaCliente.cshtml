<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <section id="Tabla-Cliente" class="form-TablaCliente">
        @using (Html.BeginForm("TablaCliente", "Cliente", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h4>Tabla de Clientes</h4>
            <table class="table table-success table-striped mt-4">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Domicilio</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdCliente</td>
                            <td>@item.NombreC</td>
                            <td>@item.ApellidoC</td>
                            <td>@item.Correo</td>
                            <td>
                                <img src="@item.UrlImagen" alt="Imagen" width="50" height="50" class="rounded-circle" />
                            </td>
                            <td>@item.Telefono</td>
                            <td>@item.Domicilio</td>
                            <td>
                                @Html.ActionLink("Editar", "ModificarCliente", new { idCliente = item.IdCliente }, new { @class = "btn btn-warning btn-sm mt-2 text-white" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                @Html.ActionLink("Agregar", "Cliente", new { @class = "btn btn-primary btn-sm text-white mt-2" })
            </p>
        }
    </section>
</body>
</html>
