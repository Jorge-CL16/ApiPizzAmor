@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/imgPrincipal/logoVentana.png" type="image/x-icon">
    <title>Pizzamor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .top-bar {
            background-color: #f8f5f0;
            padding: 0.5rem 1rem;
        }

        .navbar-main {
            background-color: #072247;
            padding: 0.75rem 1rem;
        }

            .navbar-main a {
                color: #fcb900;
                margin-right: 1rem;
                font-weight: bold;
                text-decoration: none;
            }

                .navbar-main a:hover {
                    text-decoration: underline;
                }

        .logo {
            font-weight: bold;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }

            .logo img {
                height: 24px;
                margin-right: 0.5rem;
            }

        .search-box {
            border-radius: 25px;
            padding: 0.5rem 1rem;
            background-color: white;
            display: flex;
            align-items: center;
        }

            .search-box input {
                border: none;
                outline: none;
                width: 100%;
            }
    </style>
</head>
<body>

    <!-- Top bar -->
    <div class="top-bar d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="https://img.icons8.com/ios-filled/50/000000/headphones.png" alt="Soporte" width="24" class="me-2">
            <div>
                <div class="small">Soporte al cliente</div>
                <div class="small fw-bold">477 232 1406</div>
            </div>
        </div>
        <div class="logo text-dark">
            <img src="https://img.icons8.com/emoji/48/pizza-emoji.png" alt="Pizza Icon">
            PIZZAMOR
        </div>
        <div>
            <img src="https://img.icons8.com/ios/50/image.png" alt="Imager" width="40">
        </div>
    </div>

    <!-- Main navbar -->
    <div class="navbar-main d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <a href=" @Url.Action("Admin", "Admin")">INICIO</a>
            <a href=" @Url.Action("Lista", "Lista")">LISTADO</a>
            <a href="@Url.Action("OrdenD","OrdenD")">ORDEN</a>
            <a href=" @Url.Action("TablaRefresco", "Refresco")">REFRESCO</a>
            <a href=" @Url.Action("TablaEmpleado", "Empleado")">EMPLEADOS</a>
            <a href=" @Url.Action("TablaCliente", "Cliente")">CLIENTES</a>
        </div>
        <div class="search-box">
            <input type="text" placeholder="Las Mejores Pizzas">
        </div>
    </div>
    </body>
<body>
    <section id="Tabla-Cliente" class="form-TablaCliente">
        @using (Html.BeginForm("TablaCliente", "Cliente", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h4>Tabla de Clientes</h4>
            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Domicilio</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdCliente</td>
                            <td>@item.NombreC</td>
                            <td>@item.ApellidoC</td>
                            <td>@item.Correo</td>
                            <td>
                                <img src="@item.UrlImagen" alt="Imagen" width="50" height="50" class="rounded-circle" />
                            </td>
                            <td>@item.Telefono</td>
                            <td>@item.Domicilio</td>
                            <td>
                                @Html.ActionLink("Editar", "ModificarCliente", new { idCliente = item.IdCliente }, new { @class = "btn btn-warning btn-sm mt-2 text-white" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                @Html.ActionLink("Agregar", "Cliente", new { @class = "btn btn-primary btn-sm text-white mt-2" })
            </p>
        }
    </section>
</body>
</html>
