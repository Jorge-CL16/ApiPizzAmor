@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <section id="Cliente-Registro" class="form-registroCliente">
        @using (Html.BeginForm("AgregarCliente", "Cliente", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h4>Registro de Clientes</h4>
            <input class="controls" type="text" name="nombre" id="Nombre" placeholder="Ingresa el nombre del cliente">
            <input class="controls" type="text" name="apellido" id="Apellido"
                   placeholder="Ingresa el apellido del cliente">
            <input class="controls" type="text" name="correo" id="Correo" placeholder="Ingresa el correo del cliente">
            <label for="Imagen" class="form-label">Imagen del cliente:</label>
            <input class="form-control" type="file" id="Imagen" name="imagen">
            <input class="controls mt-4" type="text" name="telefono" id="Telefono" placeholder="Ingresa el telefono del cliente">
            <input class="controls" type="text" name="domicilio" id="Domicilio" placeholder="Ingresa el domicilio del cliente">
            <input class="botons" type="submit" value="Guardar">
        }
    </section>
</body>
</html>