@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Pizzamor</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		body {
			margin: 0;
			padding: 0;
		}

		.top-bar {
			background-color: #f8f5f0;
			padding: 0.5rem 1rem;
		}

		.navbar-main {
			background-color: #072247;
			padding: 0.75rem 1rem;
		}

			.navbar-main a {
				color: #fcb900;
				margin-right: 1rem;
				font-weight: bold;
				text-decoration: none;
			}

				.navbar-main a:hover {
					text-decoration: underline;
				}

		.logo {
			font-weight: bold;
			font-size: 1.5rem;
			display: flex;
			align-items: center;
		}

			.logo img {
				height: 24px;
				margin-right: 0.5rem;
			}

		.search-box {
			border-radius: 25px;
			padding: 0.5rem 1rem;
			background-color: white;
			display: flex;
			align-items: center;
		}

			.search-box input {
				border: none;
				outline: none;
				width: 100%;
			}
	</style>
</head>
<body>

	<!-- Top bar -->
	<div class="top-bar d-flex justify-content-between align-items-center">
		<div class="d-flex align-items-center">
			<img src="https://img.icons8.com/ios-filled/50/000000/headphones.png" alt="Soporte" width="24" class="me-2">
			<div>
				<div class="small">Soporte al cliente</div>
				<div class="small fw-bold">477 232 1406</div>
			</div>
		</div>
		<div class="logo text-dark">
			<img src="https://img.icons8.com/emoji/48/pizza-emoji.png" alt="Pizza Icon">
			PIZZAMOR
		</div>
		<div>
			<img src="https://img.icons8.com/ios/50/image.png" alt="Imager" width="40">
		</div>
	</div>

	<!-- Main navbar -->
	<div class="navbar-main d-flex justify-content-between align-items-center">
		<div class="d-flex align-items-center">
			<a href=" @Url.Action("Admin", "Admin")">INICIO</a>
			<a href=" @Url.Action("Lista", "Lista")">LISTADO</a>
			<a href="@Url.Action("OrdenD","OrdenD")">ORDEN</a>
			<a href=" @Url.Action("TablaRefresco", "Refresco")">REFRESCO</a>
			<a href=" @Url.Action("TablaEmpleado", "Empleado")">EMPLEADOS</a>
			<a href=" @Url.Action("TablaCliente", "Cliente")">CLIENTES</a>
		</div>
		<div class="search-box">
			<input type="text" placeholder="Las Mejores Pizzas">
		</div>
	</div>
</body>
<body>
	<form>
		<div class="mt-2 container-fluid">
			<header>
				<div class="col-12">
					<div class="row">
						<div class="col-12 text-start">
							<h1 class="text-center" style="font-family: Segoe UI Black">
								Ordenes Fisicas
							</h1>
						</div>
					</div>
				</div>
			</header>

			<section id="Lista" class="form-Lista">
				@using (Html.BeginForm("Lista", "Lista", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					<table class="table">
						<thead>
							<tr>
								<th scope="col" style="font-family: Segoe UI Black">
									Numero de Orden🍕:
								</th>
								<th scope="col" style="font-family: Segoe UI Black">Empleado</th>
								<th scope="col" style="font-family: Segoe UI Black">Refresco</th>
								<th scope="col" style="font-family: Segoe UI Black">Sabor</th>
								<th scope="col" style="font-family: Segoe UI Black">Tamaño</th>
								<th scope="col" style="font-family: Segoe UI Black">Fecha</th>
								<th scope="col" style="font-family: Segoe UI Black">Total</th>
								<th scope="col" style="font-family: Segoe UI Black">
									Editar Orden🍕
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.IdOrdenF</td>
									<td>@item.IdEmpleado</td>
									<td>@item.IdRefresco</td>
									<td>@item.SaborIngredientes</td>
									<td>@item.TamanioPizza</td>
									<td>@item.FechaF</td>
									<td>@item.MontoTotal</td>
								</tr>
							}
						</tbody>
					</table>
				}
			</section>
			<section id="ListaDigital" class="form-ListaDigital m-3">
				<h1 class="text-center" style="font-family: Segoe UI Black">
					Ordenes Digitales
				</h1>
				@using (Html.BeginForm("ListaDigital", "Lista", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					<table class="table">
						<thead>
							<tr>
								<th scope="col" style="font-family: Segoe UI Black">
									Numero de Orden🍕:
								</th>
								<th scope="col" style="font-family: Segoe UI Black">Cliente</th>
								<th scope="col" style="font-family: Segoe UI Black">Repartidor</th>
								<th scope="col" style="font-family: Segoe UI Black">Sucursal</th>
								<th scope="col" style="font-family: Segoe UI Black">Ingredientes</th>
								<th scope="col" style="font-family: Segoe UI Black">Tamaño</th>
								<th scope="col" style="font-family: Segoe UI Black">Fecha</th>
								<th scope="col" style="font-family: Segoe UI Black">Correo</th>
								<th scope="col" style="font-family: Segoe UI Black">Total</th>
								<th scope="col" style="font-family: Segoe UI Black">
									Editar Orden🍕
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.IdOrdenD</td>
									<td>@item.IdCliente</td>
									<td>@item.IdRepartidor</td>
									<td>@item.IdRefresco</td>
									<td>@item.IdSucursal</td>
									<td>@item.SaborIngredientes</td>
									<td>@item.TamanioPizza</td>
									<td>@item.FechaD</td>
									<td>@item.Correo</td>
									<td>@item.MontoTotal</td>
								</tr>
							}
						</tbody>
					</table>
				}
			</section>
		</div>
	</form>
</body>
</html>
